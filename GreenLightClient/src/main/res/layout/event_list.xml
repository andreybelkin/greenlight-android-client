    <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_marginBottom="50dp"
            android:layout_marginTop="?android:actionBarSize">
        <ListView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/listViewEvents" android:scrollingCache="false" android:smoothScrollbar="false"
        />
    </TableRow>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#3FA43A" android:id="@+id/trBottomButtons"
            android:layout_gravity="bottom"
            android:layout_alignParentBottom="true"
    >
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ibRed"
                android:src="@drawable/icon_red_new_event"
                android:background="@null"
                android:layout_weight="1" android:layout_marginTop="10dp" android:layout_marginBottom="10dp"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ibYellow"
                android:background="@null"
                android:src="@drawable/icon_yellow_new_event"
                android:layout_weight="1" android:layout_marginTop="10dp" android:layout_marginBottom="10dp"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ibWhite"
                android:background="@null"
                android:src="@drawable/icon_white_new_event"
                android:layout_weight="1" android:layout_marginTop="10dp" android:layout_marginBottom="10dp"/>
    </LinearLayout>
</RelativeLayout >