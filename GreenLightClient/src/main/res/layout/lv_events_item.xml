<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    tools:ignore="MissingPrefix"
    android:orientation="horizontal" android:layout_weight="1">

    <LinearLayout
            android:layout_marginRight="1dp"
            android:background="@null"
            android:layout_width="fill_parent"
            android:layout_weight="1"
            android:layout_height="78dp" android:orientation="vertical">

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="25dp">
            <TextView
                android:id="@+id/tvEventsDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textSize="9sp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="3dp"
                android:textColor="@color/symbol_black"
                fontPath="fonts/Roboto-Regular.ttf"
            />
            <TextView
                    android:id="@+id/tvEventsStreet"
                    android:layout_toRightOf="@+id/tvEventsDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:textSize="9sp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="3dp"
                    android:textColor="@color/symbol_black"
                    fontPath="fonts/Roboto-Regular.ttf"
            />
        </TableRow>

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <TextView
                android:id="@+id/tvEventsTitle"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="7dp"
                android:paddingRight="7dp"
                android:maxLines="3"
                android:ellipsize="end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/symbol_black"
                fontPath="fonts/Roboto-Regular.ttf"
                android:text="Some text" />
        </TableRow>

    </LinearLayout>

</LinearLayout>

