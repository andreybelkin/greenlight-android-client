<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   android:id="@+id/toolbar_actionbar"
                                   android:layout_width="match_parent"
                                   app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                                   android:layout_height="?android:actionBarSize"
                                   android:background="#3FA43A">
    <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:src="@drawable/ic_launcher"
            android:background="@null"
            android:id="@+id/ibIconUp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:id="@+id/tvGl" android:text="GreenLight" android:gravity="center_vertical"
            android:textColor="#ffffff" android:visibility="gone" android:textSize="20sp"/>
    <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:src="@drawable/triangle_down" android:id="@+id/ivDropDown"/>
    <Spinner
            android:id="@+id/spinnerChannel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            />
</android.support.v7.widget.Toolbar>